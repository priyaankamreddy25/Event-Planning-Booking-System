doctype html
html
  head
    title Event Management System
    style.
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: #f7f7f7;
        color: #333;
      }

      header {
        background: #2c3e50;
        padding: 20px;
        color: white;
        text-align: center;
      }

      nav {
        margin-top: 10px;
      }

      nav a {
        color: #ecf0f1;
        margin: 0 10px;
        text-decoration: none;
        font-weight: bold;
      }

      nav a:hover {
        text-decoration: underline;
      }

      h1, h2 {
        margin-bottom: 20px;
      }

      table {
        width: 95%;
        margin: 20px auto;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }

      table th,
      table td {
        padding: 12px 10px;
        border: 1px solid #ddd;
        text-align: left;
      }

      table th {
        background: #34495e;
        color: white;
      }

      table tr:nth-child(even) {
        background: #f2f2f2;
      }

      a {
        color: #2980b9;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .back-link {
        display: inline-block;
        margin-left: 30px;
        margin-top: 20px;
        font-size: 16px;
      }

  body
    header
      h1 Event Management System
      nav
        a(href="/events") All Events

    block content
